$backgroundColor = white
$backgroundColorHover = #f2f2f2
$border = 1px solid #E0E0E0

.message-list
  border-top: $border
  overflow-y: scroll
  height: 100%
  .message
    cursor: pointer
    padding: 0 5px
    border-bottom: $border
    position: relative
    background: $backgroundColor
  
  .message:hover
    background: $backgroundColorHover
    .more
      background: $backgroundColorHover
  
  .topic
    padding-top 2px
    white-space nowrap
    overflow hidden
    font-size 12px
    line-height 32px
    color #444
    
  .more
    position absolute
    right 0
    top 7px
    padding 3px 5px 3px 2px
    // margin-right 7px
    background-color $backgroundColor
    line-height 16px
    
  .groups
    float left
    
    .group
      color white
      font-size : 11px
      float left
      margin 0px 2px
      padding 0 10px
      text-transform: uppercase
      font-weight: 800
      font-variant: small-caps
      border-radius: 5px

    .group:first-child
      margin-left: 0px

  .comments
    min-width 20px
    font-weight bold
    text-align center
    font-size x-small
    color #c4c4c4
    padding 0px 1px 0 2px
    float left