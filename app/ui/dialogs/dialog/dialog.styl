@import "nib/gradients"

#dialog
  border-radius: 6px
  box-shadow: 0 3px 7px rgba(0,0,0,0.3)
  position: fixed;
  top: 150px;
  left: 50%;
  z-index: 1000;
  width: 600px;
  background: white;

  .title
    border 1px solid #0064CD
    color: white;
    background: linear-gradient(top, #049CDB, #0064CD)
    padding: 0px 10px
    color: white;
    font-size: 20px;
    font-family: "Minion Pro";
    line-height: 32px;
    text-shadow: 0px 1px 2px #003979, 0 3px 20px #999;
    -webkit-font-smoothing: antialiased;

  /* close */

  .close
    position: absolute;
    top: 7px
    right: 10px;
    display: none;
    color: white
    text-decoration: none;
    font-weight: bold;
    font-size: 16px;

    em
      display: none

    &:hover
      color: black;

    &:active
      margin-top: 1px;

  &.closable .close
    display: block

  .content
    padding: 15px 20px;
    border-left: 1px solid #999
    border-right: 1px solid #999

  .footer
    box-shadow: inset 0 1px 0 white;
    text-align: right;
    border: 1px solid #999
    background-color: #f5f5f5
    padding: 10px 15px 10px
    border-top: 1px solid #bbb

    button
      text-shadow: 0px 1px 2px #003979, 0 3px 20px #999;
      font-size: 13px
      line-height: 13px
      margin-left: 10px
      border-radius: 6px
      border 1px solid #0064CD
      color: white;
      background: linear-gradient(top, #049CDB, #0064CD)


  /* slide */

  &.slide
    -webkit-transition: opacity 300ms, top 300ms;
    -moz-transition: opacity 300ms, top 300ms;

  &.slide.hide
    top: -500px;
    opacity: 0;


  /* scale */

  &.scale
    -webkit-transition: -webkit-transform 300ms;
    -moz-transition: -moz-transform 300ms;
    -webkit-transform: scale(1);
    -moz-transform: scale(1);

  &.scale.hide
    -webkit-transform: scale(0);
    -moz-transform: scale(0);
