@import "nib/gradients"

.dialog
  display: block
  position: fixed
  top: 50%
  left: 50%
  z-index: 2000
  width: 530px
  margin: -40% 0 0 -250px
  border-radius: 6px
  box-shadow: 0 3px 7px rgba(0,0,0,0.3)
  background-clip: padding-box

  .header
    border 1px solid #0064CD
    color: white;
    background: linear-gradient(top, #049CDB, #0064CD)
    border-radius: 6px 6px 0 0
    padding: 0px 10px
    color: white;
    font-size: 20px;
    font-family: "Minion Pro";
    line-height: 32px;
    text-shadow: 0px 1px 2px #003979, 0 3px 20px #999;
    -webkit-font-smoothing: antialiased;

  .body
    padding: 10px;
    background: white
    border-left: 1px solid #999
    border-right: 1px solid #999

    input, textarea
      &:first-child
        margin-top: 0px
      margin-top: 10px
      border: 1px solid #bbb
      font-size: 14px
      line-height: 1.8em
      width: 100%
      padding: 0 4px
      outline: none


  .footer
    border: 1px solid #999
    background-color: #f5f5f5
    padding: 10px 15px 10px
    border-top: 1px solid #bbb
    box-shadow: inset 0 1px 0 #fff
    border-radius: 0 0 6px 6px
    margin-bottom: 0
    text-align: right

    button
      text-shadow: 0px 1px 2px #003979, 0 3px 20px #999;
      font-size: 13px
      line-height: 13px
      margin-left: 10px
      border-radius: 6px
      border 1px solid #0064CD
      color: white;
      background: linear-gradient(top, #049CDB, #0064CD)

