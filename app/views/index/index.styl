// @imports
@import "nib/gradients"

// Variables
$topWidth = 41px;

/*
  Index page specific code
*/
#wrapper
  width: 100%
  height: 100%
  padding-top: $topWidth
  font: 13px "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

#top
  height: $topWidth
  padding: 5px
  border-bottom 1px solid black
  background: linear-gradient(top, #049CDB, #0064CD)
  margin-top: - $topWidth
  text-shadow white 0 1px 0

  .logo
    color: #fff
    font-size: 26px
    margin-left: 5px
    font-family: "Minion Pro"
    line-height: 36px
    text-shadow: 0px 1px 2px #003979, 0 3px 20px #999
    cursor: pointer
    text-decoration: none
    -webkit-font-smoothing: antialiased

    &:hover
      text-shadow: 0px 1px 2px #003979, 0 3px 20px #fff;

#container
  width:100%
  height: 100%

#left
  width: 14%
  height: 100%
  float: left
  background-image: url('data:image/jpeg;base64,')
  border-right: 1px solid #A9AEB2

#middle
  width: 43%
  height: 100%
  float: left
  background-image: url('data:image/gif;base64,')
  border-right: 1px solid #A9AEB2
  padding-top: 54px
  
  &.expanded
    padding-top: 87px
  &.expanded .share-message
    margin-top: -87px

  .share-message
    margin-top: -54px
    

#right
  width: 43%
  height: 100%
  float: left
  position:relative
  background-color: black
  padding-top: 31px
  padding-bottom: 50px

  .message-header
    margin-top: -31px

  .comment-list
    height: 100%
    overflow-y: scroll

  .share-comment
    position: absolute
    bottom: 0
    width: 100%
