backgroundColor = white
backgroundColorHover = #f2f2f2

.message-list
  border: 1px solid gray
  background-color: whiteSmoke

.message-container
  cursor pointer
  padding 0 5px
  border-bottom 1px solid #E0E0E0
  position relative
  background-color backgroundColor
  font-family: "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  line-height: 32px

  &:last-child
    border-bottom: none

  &:hover
    background-color backgroundColorHover

    .more
      background-color backgroundColorHover

  .icon
    float: left
    height: 20px
    width: 20px
    margin-top: 7px

  .message
    margin-left: 25px
    padding-top 2px
    white-space nowrap
    overflow hidden
    font-size 12px
    color #444

  .more
    position absolute
    right 0
    top 7px
    padding 3px 5px 3px 2px
    // margin-right 7px
    background-color backgroundColor
    line-height 16px
   
    > div
      float:left
      margin: 0 4px

    .group
      color white
      font-size : 10px
      font-weight: bold
      wrap: nowrap
      margin 0px 2px
      padding 3px 10px
      text-transform uppercase
      border-radius 5px
      
    .group:first-child
      margin-left 0px
        
    .date
      font-size: 70%
      color: #4682B4

    .comments
      font-size 60%
      font-weight 700
      background: #B0B0B0
      color: white
      padding-left: 4px
      padding-right: 2px
      border-radius: 5px