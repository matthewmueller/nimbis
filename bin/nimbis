    exec = require('child_process').exec,
    path = require('path'),
    join = path.join,
    fs = require('fs'),
    cwd = path.resolve(__dirname+'/..');

/*
  Version
*/
program.version('0.0.1');

/*
  Directories to search
*/
var directories = ['/client', '/server'];

/*
