.share-message
  background-color: whiteSmoke
  padding: 0 5px
  border: 1px solid #ccc
  border-radius: 5px
    
  .message
    margin: 5px 0
  
  button, textarea, input
    border-radius: 5px
    line-height: 1.5em
  
  textarea, input
    border: 1px solid #888
    resize: none
    outline: none
    width: 100%
    background-color: white
  
  .more
    display: none
    margin: 0 100px 5px 0
  
  .share-with
    float: left
    
  .share
    float:right
    width: 98px
    height: 28px
    margin-right: -100px
    background-color: #8EDD20
    border: 1px solid #66A11C
    color: #66A11C
    

