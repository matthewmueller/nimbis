@import "nib/clearfix"

#chat-container
  border-left 1px solid black
  // background-image url("images/texture.gif")
  position relative
  height 100%
  clearfix()    

  // Contains comment text
  .absolute-comment-container
    position absolute
    bottom 0px
    width 100%
  
  .commentText-container
    padding 10px
  
    .commentText
      outline none
      padding 5px
      font-family "lucida grande",tahoma,verdana,arial,sans-serif
      font-size 12px
      height 80px
      width 100%
      border 1px solid black
      border-radius 5px
      resize none

/* 
  Stack Overflow: Add Padding/Margin to 100% height
  /questions/485827/css-100-height-with-padding-margin
*/
#comments-container
  display block
  position absolute
  height auto
  left 0
  right 0
  top 0
  bottom 0

  margin 10px 0 100px 10px
  padding-right 10px
  
  overflow-y scroll
  overflow-x hidden
  
.comments
  display block
  
  .comment
    clearfix()
    padding 5px
    background-color white
    margin-bottom 10px
    border 1px solid #6c839a
    border-radius 5px
  
    .name
      float left
      color #898989
      font-size small
    
    .date
      float right
      color #898989
      font-size x-small
    
    .content
      margin-top 5px
      float left
      clear both
      font-size small

  
