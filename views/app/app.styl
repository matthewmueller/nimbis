@import "nib/clearfix"
@import "nib/gradients"

html, body
  // overflow: hidden
  
#wrapper
  padding-top: 41px
  min-width: 960px
  
#top
  height: 30px
  padding: 5px
  background linear-gradient(top, #049CDB, #0064CD)
  border-bottom 1px solid black
  text-shadow white 0 1px 0
  margin-top -41px

#main
  padding-left 175px
  height 100%

#left
  height 100%
  float left
  margin-left -175px
  min-height 150px
  width 175px
  
#middle
  height: 100%
  float left
  width 50%
  position relative

#right
  position relative
  float left
  height 100%
  width 50%